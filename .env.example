# WordCompare Environment Variables
# Copy this file to .env for local development

# Application
VITE_APP_NAME=WordCompare
VITE_APP_VERSION=1.0.0

# API Configuration (if needed in the future)
# VITE_API_URL=https://api.wordcompare.com
# VITE_API_KEY=your_api_key_here

# Feature Flags
VITE_ENABLE_PDF_EXPORT=true
VITE_ENABLE_HTML_EXPORT=true
VITE_ENABLE_CSV_EXPORT=true
VITE_ENABLE_JSON_EXPORT=true

# File Upload Limits
VITE_MAX_FILE_SIZE=52428800
VITE_ALLOWED_FILE_TYPES=.docx

# Analytics (optional)
# VITE_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
